@using Models
@model FurnitureAndFixtureViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ItemQty" class="form-label"><strong>@Localizer["Item Qty"] :</strong></label>
			<input asp-for="@Model.ItemQty" class="form-control text-end"  />
